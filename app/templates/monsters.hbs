<h1>Monsters</h1>

<div class="row">
  <div class="col-sm-4 col-xs-6">
    <ul class="monsters-index-list">
      {{#each model as |monster|}}
        {{!-- notice the link-to shows the entire path, since we don't have 'resource' resetting the base --}}
        {{#link-to 'monsters.monster.show' monster  tagName='li' class="monster list-unstyled"}}
          <span class="monster-image">
            <img src={{monster.imageUrl}} />
          </span>
          <span class="monster-info">
            lvl {{monster.level}} {{monster.name}}
          </span>
        {{/link-to}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-8 col-xs-6">
    {{!-- Here is where we display stuff from the child routes --}}
    {{outlet}}
  </div>
</div>
